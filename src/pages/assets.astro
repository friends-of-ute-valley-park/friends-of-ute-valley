---
import Layout from "@layouts/Layout.astro";

const logos = [
  {
    src: "/images/logo-small.jpg",
    alt: "Small Logo",
    ref: "LOG_SML_01",
    desc: "Small utility logo",
  },
  {
    src: "/images/logo-medium.jpg",
    alt: "Medium Logo",
    desc: "Medium report logo",
  },
  {
    src: "/images/logo-full.jpg",
    alt: "Full Size Logo",
    desc: "Standard full size logo",
  },
  {
    src: "/images/logo-full-uncompressed.jpg",
    alt: "Uncompressed Logo",
    desc: "High-resolution RAW asset",
  },
  {
    src: "/images/logo-stickers.png",
    alt: "Sticker Logo",
    desc: "Sticker-optimized layout",
  },
];
---

<Layout
  title="Assets"
  description="Download official Friends of Ute Valley Park brand assets and logos for approved community, partner, and media use."
>
  <main class="bg-stone-50 text-stone-900">
    <!-- Assets Header -->
    <section class="border-b border-stone-300">
      <div
        class="mx-auto max-w-(--breakpoint-2xl) px-4 sm:px-6 lg:px-8 py-16 lg:py-24"
      >
        <div class="flex items-center gap-4 mb-8">
          <span class="inline-block h-px w-12 bg-primary-dark"></span>
          <span
            class="font-mono text-[10px] font-black tracking-[0.2em] uppercase text-stone-500"
          >
            Park Media
          </span>
        </div>

        <h1
          class="text-6xl sm:text-9xl font-serif font-black tracking-tighter leading-none text-stone-900 uppercase"
        >
          Brand <br />
          <span class="text-primary-dark">Assets.</span>
        </h1>

        <p
          class="mt-8 max-w-2xl text-xl font-medium leading-relaxed text-stone-700"
        >
          Official visual markers and logos for use in authorized
          communications, field signage, and technical reports.
        </p>
      </div>
    </section>

    <!-- Assets Grid -->
    <section class="border-b border-stone-300 bg-stone-100/50">
      <div class="mx-auto max-w-(--breakpoint-2xl) px-4 sm:px-6 lg:px-8 py-24">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
          {
            logos.map((logo) => (
              <div class="bg-white border border-stone-300 group hover:border-primary-dark transition-colors">
                <div class="aspect-square flex items-center justify-center p-12 bg-stone-50/50 border-b border-stone-200">
                  <img
                    src={logo.src}
                    alt={logo.alt}
                    class="max-h-full w-auto transition-all duration-700"
                  />
                </div>
                <div class="p-6 space-y-4">
                  <div class="space-y-1">
                    <h3 class="text-xl font-serif font-black uppercase tracking-tight text-stone-900">
                      {logo.alt}
                    </h3>
                    <p class="text-xs text-stone-500 font-medium uppercase tracking-tighter">
                      {logo.desc}
                    </p>
                  </div>
                  <div class="pt-4">
                    <a
                      href={logo.src}
                      download
                      class="inline-block px-6 py-3 border border-stone-300 font-mono text-[10px] font-black uppercase tracking-widest text-stone-500 hover:bg-stone-900 hover:text-white transition-all"
                    >
                      Download Asset
                    </a>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  @font-face {
    font-family: "EditorialSerif";
    src: local("Georgia"), local("Times New Roman"), serif;
  }
  .font-serif {
    font-family: "EditorialSerif", serif;
  }
</style>
