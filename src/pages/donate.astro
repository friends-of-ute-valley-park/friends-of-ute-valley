---
import { Image } from "astro:assets";

import Layout from "../layouts/Layout.astro";
import CheckBadgeIcon from "~icons/heroicons/check-badge";
// New image imports for donation incentives
import TshirtImage from "../assets/images/merch/tshirt.png";
import HatImage from "../assets/images/merch/hat.png";

const benefits = [
  "Expanded trails",
  "Trail maintenance",
  "Wayfinding signage and facilities",
  "New tools",
  "Educational programs",
  "Volunteer appreciation",
];
import VolunteerHeroImage from "../assets/images/volunteer-hero.jpg";

// New: Donation Tiers Data
const donationTiers = [
  {
    name: "Park Supporter",
    incentive: "Supporter T-Shirt",
    image: TshirtImage,
    alt: "Friends of Ute Valley Park Supporter T-Shirt",
    description:
      "Show your park pride with a Ute Valley Park t-shirt!",
    donationAmount: "$40",
  },
  {
    name: "Trail Guardian",
    incentive: "Guardian Hat",
    image: HatImage,
    alt: "Friends of Ute Valley Park Guardian Hat",
    description:
      "Rep your favorite park with a Ute Valley Park hat!",
    donationAmount: "$60",
  },
  {
    name: "Valley Champion",
    incentive: "Champion Swag Pack",
    images: [TshirtImage, HatImage], // Array for multiple images
    altTshirt: "Friends of Ute Valley Park Champion T-Shirt",
    altHat: "Friends of Ute Valley Park Champion Hat",
    description:
      "The complete package — t-shirt, hat, and stickers/buttons!",
    donationAmount: "$100",
  },
];
---

<Layout title="Donate">
  <main class="bg-stone-50 text-stone-900">
    <!-- Fiscal Hero -->
    <section class="relative border-b border-stone-300 overflow-hidden">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-0">
        <!-- Message Column -->
        <div
          class="lg:col-span-7 pt-12 pb-20 lg:pt-32 lg:pb-40 px-4 sm:px-6 lg:px-12 border-r border-stone-300"
        >
          <div class="space-y-8">
            <div class="flex items-center gap-4">
              <span class="inline-block h-px w-12 bg-primary-dark"></span>
              <span
                class="font-mono text-[10px] font-black tracking-[0.2em] uppercase text-stone-500"
              >
                Support Us
              </span>
            </div>

            <h1
              class="text-6xl sm:text-9xl font-serif font-black tracking-tighter leading-[0.85] text-stone-900 uppercase"
            >
              Support <br /> The <br />
              <span class="text-primary-dark">Wildland.</span>
            </h1>

            <div class="max-w-xl space-y-6">
              <p class="text-xl font-medium leading-relaxed text-stone-700">
                Your generosity helps us maintain trails, protect wildlife
                habitat, and keep Ute Valley Park beautiful for everyone.
              </p>
              <p class="text-sm text-stone-600 leading-relaxed font-medium">
                Your tax-deductible contributions directly fund trail
                maintenance, invasive species management, educational programs,
                and more. Every donation makes a real difference for our park
                and community.
              </p>
            </div>

            <div class="pt-8">
              <a
                href="https://trailsandopenspacecoalition-bloom.kindful.com/embeds/65db98e0-d794-4712-bf37-144689d58de3"
                class="inline-block px-10 py-5 bg-primary-dark text-white font-mono text-sm font-black uppercase tracking-widest transition-all hover:bg-stone-900 active:scale-95 shadow-[8px_8px_0px_0px_var(--color-accent)]"
              >
                Donate Now
              </a>
            </div>
          </div>
        </div>

        <!-- Visual Context -->
        <div
          class="lg:col-span-5 bg-stone-100/50 relative group overflow-hidden"
        >
          <Image
            src={VolunteerHeroImage}
            alt="Park scenery"
            class="h-full w-full object-cover transition-all duration-1000"
            width={1200}
          />
          <div
            class="absolute inset-0 border-[24px] border-white/20 pointer-events-none"
          >
          </div>
          <div
            class="absolute bottom-8 left-8 bg-primary-dark text-white px-3 py-1 font-mono text-[10px] uppercase tracking-widest"
          >
          </div>
        </div>
      </div>
    </section>

    <!-- Donation Tiers -->
    <section class="py-24 border-b border-stone-300">
      <div class="mx-auto max-w-(--breakpoint-2xl) px-4 sm:px-6 lg:px-8">
        <div class="mb-16">
          <h2
            class="text-4xl sm:text-6xl font-serif font-black uppercase tracking-tight text-stone-900 mb-6"
          >
            Supporter <span class="text-primary-dark italic">Gifts.</span>
          </h2>
          <p
            class="max-w-2xl text-lg text-stone-600 font-medium leading-relaxed"
          >
            As a thank you for your support, we offer exclusive field apparel
            and stickers for specific donation levels.
          </p>
        </div>

        <div
          class="grid grid-cols-1 md:grid-cols-3 gap-px bg-stone-300 border border-stone-300"
        >
          {
            donationTiers.map((tier) => (
              <div class="bg-white p-8 flex flex-col justify-between hover:bg-stone-50 transition-colors group">
                <div class="space-y-6">
                  <div class="flex justify-between items-start">
                    <div class="space-y-1">
                      <p class="font-mono text-[10px] font-black uppercase tracking-widest text-primary-dark">
                        {tier.name}
                      </p>
                      <h3 class="text-2xl font-serif font-black uppercase tracking-tight text-stone-900 leading-tight">
                        {tier.incentive}
                      </h3>
                    </div>
                    <div class="text-3xl font-mono font-black tracking-tighter text-stone-900">
                      {tier.donationAmount}
                    </div>
                  </div>

                  <div class="aspect-square bg-stone-100 border border-stone-200 flex items-center justify-center overflow-hidden p-8">
                    {tier.images ? (
                      <div class="grid grid-cols-2 gap-4">
                        <Image
                          src={tier.images[0]}
                          alt={tier.altTshirt}
                          class="w-full h-auto transition-all duration-700"
                        />
                        <Image
                          src={tier.images[1]}
                          alt={tier.altHat}
                          class="w-full h-auto transition-all duration-700"
                        />
                      </div>
                    ) : (
                      <Image
                        src={tier.image}
                        alt={tier.alt}
                        class="w-full h-auto transition-all duration-700"
                      />
                    )}
                  </div>

                  <p class="text-sm text-stone-600 leading-relaxed font-medium">
                    {tier.description}
                  </p>
                </div>

                <div class="pt-8">
                  <a
                    href="https://trailsandopenspacecoalition-bloom.kindful.com/embeds/65db98e0-d794-4712-bf37-144689d58de3"
                    class="block w-full py-4 bg-stone-900 text-white text-center font-mono text-xs font-black uppercase tracking-widest hover:bg-primary-dark transition-colors"
                  >
                    Select Tier
                  </a>
                </div>
              </div>
            ))
          }
        </div>

        <div class="mt-12 p-8 border border-stone-200 bg-stone-100/50">
          <p
            class="text-xs font-mono uppercase tracking-widest text-stone-500 text-center leading-relaxed"
          >
            Note: To receive your thank-you gift, email your donation receipt to <a
              href="mailto:contact@friendsofutevalleypark.com"
              class="text-primary-dark font-black underline"
              >contact@friendsofutevalleypark.com</a
            > for coordination of delivery.
          </p>
        </div>
      </div>
    </section>

    <!-- Fiscal Sponsorship Info -->
    <section class="py-24 border-b border-stone-300">
      <div class="mx-auto max-w-(--breakpoint-2xl) px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 items-start">
          <div class="lg:col-span-8 space-y-12">
            <div>
              <h2
                class="text-4xl sm:text-6xl font-serif font-black uppercase tracking-tight text-stone-900 mb-8"
              >
                How Your <span class="text-primary-dark italic"
                  >Gift Helps.</span
                >
              </h2>
              <p class="text-lg text-stone-700 leading-relaxed font-medium">
                Friends of Ute Valley Park operates under the fiscal sponsorship
                of the Trails and Open Space Coalition (TOSC), a 501(c)(3)
                nonprofit. This ensures your donation is used effectively.
              </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-8">
              <div class="space-y-4">
                <h4
                  class="font-mono text-xs font-black uppercase tracking-widest text-primary-dark border-b border-stone-200 pb-2"
                >
                  What We Need
                </h4>
                <ul class="space-y-4">
                  {
                    benefits.map((benefit) => (
                      <li class="flex items-start gap-4">
                        <CheckBadgeIcon class="w-5 h-5 text-accent-dark shrink-0" />
                        <span class="text-sm font-bold uppercase tracking-tight text-stone-800">
                          {benefit}
                        </span>
                      </li>
                    ))
                  }
                </ul>
              </div>
              <div class="space-y-4">
                <h4
                  class="font-mono text-xs font-black uppercase tracking-widest text-primary-dark border-b border-stone-200 pb-2"
                >
                  Our Partner
                </h4>
                <div class="bg-stone-100 p-6 border border-stone-200 space-y-4">
                  <p class="text-xs text-stone-600 leading-relaxed font-medium">
                    All donations are processed via TOSC for regulatory
                    compliance and transparency.
                  </p>
                  <div class="flex flex-col gap-2">
                    <span class="font-mono text-[10px] uppercase text-stone-500"
                      >Entity Status</span
                    >
                    <span class="font-mono text-[10px] font-black uppercase"
                      >501(c)(3) Tax-Exempt</span
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="lg:col-span-4 space-y-8">
            <div class="border border-stone-300 bg-white p-8 space-y-8">
              <div class="flex justify-center">
                <svg
                  id="Layer_1"
                  class="w-full h-auto opacity-50"
                  version="1.1"
                  xmlns="http://www.w3.org/2000/svg"
                  x="0"
                  y="0"
                  viewBox="0 0 484.2 201.5"
                  xml:space="preserve"
                >
                  <title>Trails and Open Space Logo</title>
                  <path
                    fill="currentColor"
                    d="M234.9 43.4h-18.5v135.4h-17.2V43.4h-17.6V26.3h53.3v17.1zM269 178.9c-13 0-19.4-6.4-19.4-19.4V45.7c0-13 6.4-19.4 19.4-19.4h18.5c13 0 19.4 6.4 19.4 19.4v113.7c0 13-6.4 19.4-19.4 19.4H269zm-2.3-17.2h23.1V43.4h-23.1v118.3zM342.4 124.9v36.8h23.1v-36.4c0-3.4-.2-5.5-.7-6.4-.5-.9-1.6-1.8-3.4-2.5l-25.8-9.8c-4.1-1.6-6.9-3.9-8.2-7.1-1.4-3.2-2.1-8.7-2.1-16.5V45.7c0-13 6.4-19.4 19.4-19.4h18.5c13 0 19.4 6.4 19.4 19.4V81h-17.2V43.4h-23.1v40.3c0 3.9.2 6.2.9 7.1.5.9 1.8 1.8 4.1 2.7l23.6 8.7c4.8 1.6 7.8 3.9 9.4 6.6s2.3 7.3 2.3 13.7v36.8c0 13-6.4 19.4-19.4 19.4h-18.5c-13 0-19.4-6.4-19.4-19.4v-34.5h17.1zM458.4 159.4c0 13-6.4 19.4-19.4 19.4h-18.5c-13 0-19.4-6.4-19.4-19.4V45.7c0-13 6.4-19.4 19.4-19.4H439c13 0 19.4 6.4 19.4 19.4v38.2h-17.2V43.4h-23.1v118.3h23.1v-40.9h17.2v38.6z"
                  ></path>
                  <g>
                    <path
                      fill="currentColor"
                      d="M114.2 92.4l-9.3.5-1.8-11-12.4-18.3s-5.6 10.5-6.4 12.2c-2.9 6.5-10.8 22.6-1 36.1 2.1 3 5 5.1 10.2 5.1 1.4 0 2.8-.2 4.1-.6 3.4-.9 7-4.2 31.9-11.4l-15.3-12.6zM127.6 80.5l36.3 24.8c0-.9 0-1.7.1-2.6.1-4.3-.7-8.8-.9-10.8l-30.5-20.1-5 8.7zM68.2 78.9L48.9 111c2.1.7 7.2 2.6 9.6 3.2l17.9-29.7-8.2-5.6z"
