---
import LeaveNoTrace from "@components/LeaveNoTrace.astro";
import Layout from "@layouts/Layout.astro";
import { Picture } from "astro:assets";
import trailRightOfWay from "../assets/images/trail-right-of-way.png";

const parkRules = [
  {
    code: "9.9.410",
    title: "Alcoholic Beverages",
    description: "Prohibited in all City Parks by municipal ordinance.",
  },
  {
    code: "6.6.202",
    title: "Smoking & Vaping",
    description:
      "Prohibited on park property. No designated smoking areas exist in UVP.",
  },
  {
    code: "9.9.301",
    title: "Waste Management",
    description:
      "Removal and proper disposal of all animal excrement is mandatory.",
  },
  {
    code: "9.9.302",
    title: "Leash Requirement",
    description:
      "All animals must be physically leashed. No off-leash zones exist in UVP.",
  },
  {
    code: "OR-05",
    title: "Open Fires",
    description:
      "Open fires and charcoal grills are strictly prohibited. Propane only on hard surfaces.",
  },
  {
    code: "OR-06",
    title: "Property Integrity",
    description:
      "Unlawful to injure, deface, or remove any park property or vegetation.",
  },
];
---

<Layout
  title="Rules"
  description="Review Ute Valley Park rules and city ordinances including leash laws, park hours, trail etiquette, and safety requirements."
>
  <main class="bg-stone-50 text-stone-900">
    <!-- Regulations Header -->
    <section class="border-b border-stone-300">
      <div
        class="mx-auto max-w-(--breakpoint-2xl) px-4 sm:px-6 lg:px-8 py-16 lg:py-24"
      >
        <div class="flex items-center gap-4 mb-8">
          <span class="inline-block h-px w-12 bg-primary-dark"></span>
          <span
            class="font-mono text-[10px] font-black tracking-[0.2em] uppercase text-stone-500"
          >
            Park Rules
          </span>
        </div>

        <h1
          class="text-6xl sm:text-9xl font-serif font-black tracking-tighter leading-none text-stone-900 uppercase"
        >
          Park <br />
          <span class="text-primary-dark">Regulations.</span>
        </h1>

        <p
          class="mt-8 max-w-2xl text-xl font-medium leading-relaxed text-stone-700"
        >
          The City of Colorado Springs Parks, Recreation, and Cultural Services
          Department establishes and enforces the following ordinances for Ute
          Valley Park.
        </p>
      </div>
    </section>

    <!-- Essential Hours & Exceptions -->
    <section class="border-b border-stone-300 bg-stone-100/50">
      <div class="mx-auto max-w-(--breakpoint-2xl) px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="p-8 border border-stone-300 bg-white space-y-4">
            <h3
              class="font-mono text-xs font-black uppercase tracking-widest text-primary-dark border-b border-stone-100 pb-2"
            >
              Park Hours
            </h3>
            <div class="space-y-2">
              <div class="flex justify-between font-mono text-xs uppercase">
                <span class="text-stone-500">Winter (Nov-Apr)</span>
                <span class="font-black">05:00 — 21:00</span>
              </div>
              <div class="flex justify-between font-mono text-xs uppercase">
                <span class="text-stone-500">Summer (May-Oct)</span>
                <span class="font-black">05:00 — 22:00</span>
              </div>
            </div>
          </div>

          <div class="p-8 border border-stone-300 bg-white space-y-4">
            <h3
              class="font-mono text-xs font-black uppercase tracking-widest text-primary-dark border-b border-stone-100 pb-2"
            >
              Dog Rules
            </h3>
            <p
              class="text-xs font-bold text-stone-600 leading-relaxed uppercase tracking-tight"
            >
              NO OFF-LEASH AREAS. NO DOG PARKS. LEASHES MANDATORY AT ALL TIMES
              WITHOUT EXCEPTION.
            </p>
          </div>

          <div class="p-8 border border-stone-300 bg-white space-y-4">
            <h3
              class="font-mono text-xs font-black uppercase tracking-widest text-primary-dark border-b border-stone-100 pb-2"
            >
              Fire Safety
            </h3>
            <p
              class="text-xs font-bold text-stone-600 leading-relaxed uppercase tracking-tight"
            >
              SMOKING PROHIBITED. OPEN FIRES PROHIBITED. CHARCOAL PROHIBITED.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Detailed Code -->
    <section class="py-24 border-b border-stone-300">
      <div class="mx-auto max-w-(--breakpoint-2xl) px-4 sm:px-6 lg:px-8">
        <div class="mb-16">
          <h2
            class="text-4xl sm:text-6xl font-serif font-black uppercase tracking-tight text-stone-900 mb-6"
          >
            Municipal <span class="text-primary-dark italic">Ordinances.</span>
          </h2>
        </div>

        <div
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-px bg-stone-300 border border-stone-300"
        >
          {
            parkRules.map((rule) => (
              <div class="bg-white p-8 space-y-6 hover:bg-stone-50 transition-colors group">
                <div class="flex justify-between items-start">
                  <span class="font-mono text-[10px] font-black text-primary-dark px-2 py-1 border border-primary-dark/20">
                    {rule.code}
                  </span>
                </div>
                <div class="space-y-2">
                  <h3 class="text-xl font-serif font-black uppercase tracking-tight text-stone-900 group-hover:text-primary-dark transition-colors">
                    {rule.title}
                  </h3>
                  <p class="text-sm leading-relaxed text-stone-600 font-medium">
                    {rule.description}
                  </p>
                </div>
              </div>
            ))
          }
        </div>

        <div class="mt-12 space-y-6">
          <h3
            class="font-mono text-xs font-black uppercase tracking-widest text-primary-dark border-b border-stone-200 pb-2"
          >
            Additional Restrictions
          </h3>
          <div
            class="grid grid-cols-1 md:grid-cols-2 gap-8 text-sm text-stone-600 font-medium leading-relaxed"
          >
            <p>
              • Motorized vehicles (ATVs, golf carts, etc.) are strictly
              prohibited on all trails, turf, and restricted roadways.
            </p>
            <p>
              • Amplified audio equipment requires a noise permit from the CSPD
              (Ref: 9-8-101).
            </p>
            <p>
              • Posting of unauthorized signage or hanging decorations on
              structures/vegetation is prohibited.
            </p>
            <p>
              • Attachment of ropes, wires, or other contrivances to any tree or
              plant is prohibited.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Trail Etiquette -->
    <section class="py-24 bg-stone-900 text-white">
      <div class="mx-auto max-w-(--breakpoint-2xl) px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 items-center">
          <div class="lg:col-span-5 space-y-8">
            <div class="flex items-center gap-4">
              <span class="inline-block h-px w-12 bg-accent"></span>
              <span
                class="font-mono text-[10px] font-black tracking-[0.2em] uppercase text-stone-500"
                >Field Etiquette</span
              >
            </div>
            <h2
              class="text-4xl sm:text-6xl font-serif font-black uppercase tracking-tight leading-none"
            >
              Right of <br />
              <span class="text-accent italic">Way.</span>
            </h2>
            <ul
              class="space-y-4 font-mono text-xs uppercase tracking-widest text-stone-300"
            >
              <li
                class="flex items-center gap-4 border-l-2 border-accent pl-4 py-1"
              >
                Stay on designated trails only
              </li>
              <li
                class="flex items-center gap-4 border-l-2 border-accent pl-4 py-1"
              >
                Yield to uphill travelers
              </li>
              <li
                class="flex items-center gap-4 border-l-2 border-accent pl-4 py-1"
              >
                Bicyclists yield to all other users
              </li>
              <li
                class="flex items-center gap-4 border-l-2 border-accent pl-4 py-1"
              >
                Warn others before passing on left
              </li>
            </ul>
          </div>

          <div class="lg:col-span-7">
            <div class="p-8 border border-white/10 bg-white/5">
              <Picture
                src={trailRightOfWay}
                alt="Trail right of way technical diagram"
                class="w-full h-auto brightness-200"
              />
            </div>
          </div>
        </div>
      </div>
    </section>

    <div class="bg-stone-50">
      <LeaveNoTrace />
    </div>
  </main>
</Layout>

<style>
  @font-face {
    font-family: "EditorialSerif";
    src: local("Georgia"), local("Times New Roman"), serif;
  }
  .font-serif {
    font-family: "EditorialSerif", serif;
  }
</style>
