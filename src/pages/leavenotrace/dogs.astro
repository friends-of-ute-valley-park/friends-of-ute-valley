---
import { Picture } from "astro:assets";

import DogImages from "@components/DogImages.vue";
import Layout from "@layouts/Layout.astro";

import DogImage from "../../assets/images/dog.jpg";

const otherParks = [
  {
    name: "Red Rock Canyon Open Space",
    image: "/images/other-parks/red-rock-canyon-open-space.jpg",
    type: "Unfenced",
    distance: "7.5 miles",
    time: "15 minutes",
    mapLink: "https://goo.gl/maps/qAKchVJRqyTYUc8v9",
    cityLink:
      "https://coloradosprings.gov/parks/page/red-rock-canyon-open-space",
  },
  {
    name: "Palmer Park",
    image: "/images/other-parks/palmer-park.jpg",
    type: "Fenced",
    distance: "9.8 miles",
    time: "20 minutes",
    mapLink: "https://goo.gl/maps/sgxAgR8Mnjr86Qt98",
    cityLink: "https://coloradosprings.gov/parks/page/palmer-park",
  },
  {
    name: "Garden of the Gods",
    image: "/images/other-parks/garden-of-the-gods.jpg",
    type: "Unfenced",
    distance: "6.9 miles",
    time: "14 minutes",
    mapLink: "https://goo.gl/maps/Vj2851x6X2JSNeX76",
    cityLink: "https://coloradosprings.gov/parks/page/garden-gods",
  },
  {
    name: "Rampart Dog Park",
    image: "/images/other-parks/rampart-dog-park.jpg",
    type: "Fenced",
    distance: "6.6 miles",
    time: "15 minutes",
    mapLink: "https://goo.gl/maps/UEAzoaFGxCTFi7Qo9",
    cityLink: "https://coloradosprings.gov/parks/page/rampart-park",
  },
];
const reasons = [
  "City Ordinance: Colorado Springs Ordinance 6.7.107 requires dogs to be on a leash. Fines range from $50 to $150.",
  "Courtesy to Others: Not all visitors are comfortable around dogs. Keeping your pup on a leash helps everyone enjoy the trails.",
  "Wildlife Safety: A leash keeps your dog from chasing or disturbing other pets and the wildlife that call the park home.",
  "Rattlesnake Risk: Ute Valley Park is home to rattlesnakes. A leash helps keep your dog safe from a dangerous encounter.",
];
const rules = [
  "Leash Required: There are no off-leash areas in Ute Valley Park. Dogs must be on a leash at all times.",
  "Pick Up After Your Dog: Please bag and dispose of pet waste to keep the trails clean for everyone.",
  "Stay on the Trail: Dogs should stay on designated trails at all times to protect the natural landscape.",
  "Know the Rules: Check out the full park regulations so you and your dog can have a great visit.",
];
---

<Layout
  title="Dogs at Ute Valley Park"
  description="Dog rules for Ute Valley Park: leash requirements, safety guidance, and nearby off-leash dog parks in Colorado Springs."
>
  <main class="bg-stone-50 text-stone-900">
    <!-- Dogs Hero -->
    <section class="relative border-b border-stone-300 overflow-hidden">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-0">
        <!-- Identity Column -->
        <div
          class="lg:col-span-7 pt-12 pb-20 lg:pt-32 lg:pb-40 px-4 sm:px-6 lg:px-12 border-r border-stone-300"
        >
          <div class="space-y-8">
            <div class="flex items-center gap-4">
              <span class="inline-block h-px w-12 bg-primary-dark"></span>
              <span
                class="font-mono text-[10px] font-black tracking-[0.2em] uppercase text-stone-500"
              >
                Visiting With Dogs
              </span>
            </div>

            <h1
              class="text-6xl sm:text-9xl font-serif font-black tracking-tighter leading-[0.85] text-stone-900 uppercase"
            >
              Visiting <br /> With <br />
              <span class="text-primary-dark">Dogs.</span>
            </h1>

            <p
              class="max-w-xl text-xl font-medium leading-relaxed text-stone-700"
            >
              We love dogs at Ute Valley Park! For the safety of your furry
              friend, other visitors, and local wildlife, dogs must be on a
              leash at all times.
            </p>

            <div class="flex flex-wrap gap-4 pt-4">
              <a
                href="#rules"
                class="btn-primary-cta"
              >
                Leash Rules
              </a>
              <a
                href="#off-leash"
                class="px-8 py-4 border-2 border-stone-900 font-mono text-xs font-black uppercase tracking-widest hover:bg-stone-50 transition-all"
              >
                Off-Leash Dog Parks
              </a>
            </div>
          </div>
        </div>

        <!-- Visual Context -->
        <div
          class="lg:col-span-5 bg-stone-50 p-0 relative group overflow-hidden min-h-[400px]"
        >
          <div class="absolute inset-0 transition-all duration-1000">
            <DogImages client:idle />
          </div>
          <div
            class="absolute bottom-8 left-8 z-10 px-4 py-2 bg-primary-dark border border-primary-dark font-mono text-[10px] uppercase tracking-[0.2em] text-white font-black shadow-[4px_4px_0px_0px_var(--color-accent)]"
          >
            Dogs of Ute Valley
          </div>
        </div>
      </div>
    </section>

    <!-- Leash Rules -->
    <section class="py-24 border-b border-stone-300 bg-white">
      <div class="mx-auto max-w-(--breakpoint-2xl) px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 items-start">
          <div class="lg:col-span-5">
            <h2
              class="text-4xl sm:text-6xl font-serif font-black uppercase tracking-tight text-stone-900 leading-none mb-8"
            >
              Leash <br />
              <span class="text-primary-dark italic">Rules.</span>
            </h2>
            <div
              class="aspect-square bg-stone-100 border border-stone-300 relative group overflow-hidden"
            >
              <Picture
                src={DogImage}
                formats={["avif", "webp"]}
                alt="Dog in park"
                width="800"
                class="w-full h-full object-cover transition-all duration-1000"
              />
              <div
                class="absolute bottom-4 left-4 bg-stone-900 text-white px-2 py-0.5 font-mono text-[8px] uppercase"
              >
                Good dog!
              </div>
            </div>
          </div>

          <div class="lg:col-span-7 space-y-12">
            <div>
              <p
                class="font-mono text-[10px] uppercase tracking-widest text-stone-500 font-bold mb-4"
              >
                Why Leash Rules Matter
              </p>
              <div class="grid grid-cols-1 gap-4">
                {
                  reasons.map((reason, i) => (
                    <div class="p-6 border border-stone-200 bg-stone-50 flex gap-4 items-start">
                      <span class="font-mono text-xs font-black text-primary-dark">
                        [0{i + 1}]
                      </span>
                      <p class="text-sm font-medium text-stone-700 leading-relaxed">
                        {reason}
                      </p>
                    </div>
                  ))
                }
              </div>
            </div>

            <div id="rules">
              <p
                class="font-mono text-[10px] uppercase tracking-widest text-stone-500 font-bold mb-4"
              >
                Here's Why
              </p>
              <div class="border border-stone-300 divide-y divide-stone-300">
                {
                  rules.map((rule) => (
                    <div class="p-6 flex items-center gap-6 hover:bg-stone-50 transition-colors">
                      <div class="w-2 h-2 bg-accent shrink-0" />
                      <p class="font-mono text-[10px] font-black uppercase tracking-widest text-stone-900">
                        {rule}
                      </p>
                    </div>
                  ))
                }
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Off-Leash Dog Parks Nearby -->
    <section id="off-leash" class="py-24 bg-stone-100">
      <div class="mx-auto max-w-(--breakpoint-2xl) px-4 sm:px-6 lg:px-8">
        <div
          class="mb-16 flex flex-col md:flex-row justify-between items-end gap-8"
        >
          <div>
            <h2
              class="text-4xl sm:text-6xl font-serif font-black uppercase tracking-tight text-stone-900 leading-none"
            >
              Off-Leash Dog <span class="text-primary-dark italic">Parks Nearby.</span>
            </h2>
            <p class="mt-4 text-stone-500 font-medium">
              Nearby off-leash dog parks where your pup can run free.
            </p>
          </div>
          <a
            href="https://coloradosprings.gov/parks/page/dog-parks?mlid=4736"
            class="font-mono text-xs font-black uppercase tracking-widest text-primary-dark underline decoration-accent decoration-2 underline-offset-8"
            >All CS Off-Leash Parks</a
          >
        </div>

        <div
          class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-px bg-stone-300 border border-stone-300"
        >
          {
            otherParks.map((park) => (
              <div class="bg-white flex flex-col group">
                <div class="aspect-16/10 overflow-hidden bg-stone-200 border-b border-stone-200">
                  <img
                    class="w-full h-full object-cover transition-all duration-700"
                    src={park.image}
                    alt={park.name}
                  />
                </div>
                <div class="p-8 space-y-6 flex flex-col flex-1">
                  <div class="space-y-1">
                    <p class="font-mono text-[10px] uppercase tracking-widest text-stone-500 font-bold">
                      {park.type} Park
                    </p>
                    <h3 class="text-xl font-serif font-black uppercase tracking-tight text-stone-900 leading-tight">
                      {park.name}
                    </h3>
                  </div>

                  <div class="grid grid-cols-2 gap-4 border-y border-stone-100 py-4">
                    <div class="space-y-1">
                      <p class="font-mono text-[8px] uppercase tracking-widest text-stone-500">
                        Dist
                      </p>
                      <p class="font-mono text-[10px] font-black uppercase">
                        {park.distance}
                      </p>
                    </div>
                    <div class="space-y-1">
                      <p class="font-mono text-[8px] uppercase tracking-widest text-stone-500">
                        Time
                      </p>
                      <p class="font-mono text-[10px] font-black uppercase">
                        {park.time}
                      </p>
                    </div>
                  </div>

                  <div class="pt-4 flex flex-col gap-2">
                    <a
                      href={park.mapLink}
                      class="flex justify-between items-center px-4 py-3 bg-stone-50 border border-stone-200 font-mono text-[10px] font-black uppercase tracking-widest hover:bg-stone-900 hover:text-white transition-all"
                    >
                      Visit Site <span>→</span>
                    </a>
                    <a
                      href={park.cityLink}
                      class="flex justify-between items-center px-4 py-3 bg-transparent border border-stone-200 font-mono text-[10px] font-black uppercase tracking-widest hover:bg-stone-50 transition-all"
                    >
                      Information <span>→</span>
                    </a>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  @font-face {
    font-family: "EditorialSerif";
    src: local("Georgia"), local("Times New Roman"), serif;
  }
  .font-serif {
    font-family: "EditorialSerif", serif;
  }
</style>
