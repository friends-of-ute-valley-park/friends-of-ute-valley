---
import { Image } from "astro:assets";

const teamMembers = [
  {
    name: "Drew Town",
    title: "Chair",
    image: import("@/assets/images/members/drew-town.png"),
  },
  {
    name: "Christine Thomas",
    title: "Vice-Chair",
    image: import("@/assets/images/members/christine-thomas.jpg"),
  },
  {
    name: "Megan Town",
    title: "Treasurer",
    image: import("@/assets/images/members/megan-town.jpg"),
  },
  {
    name: "Phill Emmert",
    title: "Communications",
    image: import("@/assets/images/members/phill-emmert.jpg"),
  },
  {
    name: "Haley Kline Murphy",
    title: "Outreach and Engagement Specialist",
    image: import("@/assets/images/members/haley-kline-murphy.jpg"),
  },
  {
    name: "Pete Galeotti",
    title: "Outreach and Engagement Specialist",
    image: import("@/assets/images/members/pete-galeotti.jpg"),
  },
  {
    name: "Katie Gray",
    title: "Nature and Trail Specialist",
    image: import("@/assets/images/members/katie-gray.jpg"),
  },
  {
    name: "Nadine Lambert",
    title: "Volunteer Coordinator",
    image: import("@/assets/images/members/nadine-lambert.jpg"),
  },
];
---

<div class="py-24 border-b border-stone-300">
  <div class="mx-auto max-w-(--breakpoint-2xl) px-4 sm:px-6 lg:px-8">
    <div class="mb-16">
      <div class="flex items-center gap-4 mb-4">
        <span class="inline-block h-px w-8 bg-primary-dark"></span>
        <span class="font-mono text-[10px] font-black uppercase tracking-[0.2em] text-stone-500">Our Team</span>
      </div>
      <h2
        class="text-4xl sm:text-6xl font-serif font-black uppercase tracking-tight text-stone-900"
      >
        Meet the <span class="text-primary-dark italic">Team.</span>
      </h2>
      <p class="mt-6 text-lg text-stone-600 font-medium max-w-2xl leading-relaxed">
        The dedicated leadership team overseeing the preservation, community outreach, and technical operations of the Ute Valley urban wildland.
      </p>
    </div>

    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-px bg-stone-300 border border-stone-300"
    >
      {
        teamMembers.map((teamMember) => (
          <div class="bg-white group hover:bg-stone-50 transition-colors">
            <div class="aspect-square w-full overflow-hidden grayscale group-hover:grayscale-0 transition-all duration-700 relative">
              <Image
                height="600"
                width="600"
                class="w-full h-full object-cover scale-105 group-hover:scale-100 transition-transform duration-700"
                src={teamMember.image}
                alt={teamMember.name}
              />
              <div class="absolute inset-0 border-[12px] border-white/20 pointer-events-none"></div>
            </div>
            <div class="p-6 space-y-2 border-t border-stone-200">
              <h3 class="text-lg font-serif font-black uppercase tracking-tight text-stone-900 leading-tight">
                {teamMember.name}
              </h3>
              <p class="font-mono text-[10px] font-black uppercase tracking-widest text-primary-dark">
                {teamMember.title}
              </p>
              <div class="pt-4 flex justify-end">
                <span class="font-mono text-[8px] uppercase tracking-tighter text-stone-300"></span>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>
