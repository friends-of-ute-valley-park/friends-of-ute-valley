---
const teamMembers = [
  { name: 'Dan Woods', title: 'Chair', image: '/images/members/dan-woods.jpg' },
  { name: 'Christine Thomas', title: 'Vice-Chair', image: '/images/members/christine-thomas.jpg' },
  { name: 'Kris Kaltenbacher', title: 'Secretary', image: '' },
  { name: 'Dave Ward', title: 'Treasurer', image: '' },
  { name: 'Phill Emmert', title: 'Communications', image: '/images/members/phill-emmert.jpg' },
  { name: 'Molly Murrow', title: 'Committee Member', image: '/images/members/molly-murrow.jpg' },
  { name: 'Frank Self', title: 'Committee Member', image: '/images/members/frank-self.jpg' },
  { name: 'Drew Town', title: 'Technology', image: '/images/members/drew-town.png' },
];
---

<div class="bg-white">
  <div class="max-w-screen-xl mx-auto py-12 px-4 text-center sm:px-6 lg:px-8">
    <div class="space-y-8 sm:space-y-12">
      <div class="space-y-5 sm:mx-auto sm:max-w-xl sm:space-y-4 lg:max-w-5xl">
        <h2 class="text-3xl leading-9 font-extrabold tracking-tight sm:text-4xl">The People</h2>
        <p class="text-xl leading-7 text-gray-500">Meet the team of people who help make Ute Valley Park great.</p>
      </div>
      <ul class="mx-auto grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-4 md:gap-x-6 lg:max-w-5xl lg:gap-x-8 lg:gap-y-12">
        {
          teamMembers.map((teamMember) => (
            <li>
              <div class="space-y-4">
                {teamMember.image !== '' ? (
                  <img class="mx-auto h-20 w-20 rounded-full lg:w-24 lg:h-24" src={teamMember.image} alt="" />
                ) : (
                  <svg class="mx-auto stroke-current stroke-1 text-green-800 h-20 w-20 lg:w-24 lg:h-24" fill="none" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                    />
                  </svg>
                )}

                <div class="space-y-2">
                  <div class="text-xs leading-4 font-medium lg:text-sm lg:leading-5">
                    <h4>{teamMember.name}</h4>
                    <p class="text-green-700">{teamMember.title}</p>
                  </div>
                </div>
              </div>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</div>
