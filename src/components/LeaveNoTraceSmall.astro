---
import { Picture } from "astro:assets";
import EngagementPanel from "./EngagementPanel.astro";
import lntLogo from "../assets/images/logos/leave-no-trace.png";
---

<EngagementPanel>
  <h2
    slot="heading"
    class="text-4xl sm:text-6xl font-serif font-black uppercase tracking-tight text-white leading-none"
  >
    Leave <br /> No <span class="text-accent italic">Trace.</span>
  </h2>
  <Fragment slot="description">
    <p class="text-lg text-stone-500 font-medium leading-relaxed">
      Ute Valley Park proudly supports The 7 Principles of Leave No Trace.
      Following these guidelines helps protect the park for everyone.
    </p>
    <div class="pt-6">
      <a
        href="/rules/"
        class="inline-block font-mono text-[10px] font-black uppercase tracking-widest text-accent underline decoration-accent/30 hover:decoration-accent"
      >
        View Park Rules â†’
      </a>
    </div>
  </Fragment>

  <div
    slot="main"
    class="flex flex-col items-center justify-center space-y-6 py-4"
  >
    <a href="https://www.lnt.org" class="block transition-all duration-700">
      <Picture
        src={lntLogo}
        alt="Leave No Trace logo"
        width="240"
        class="h-auto w-48"
      />
    </a>
    <span class="font-mono text-[10px] uppercase tracking-widest text-stone-500"
      >Certified Stewardship Partner</span
    >
  </div>
</EngagementPanel>
