---
import { Picture } from "astro:assets";
import PlanAhead from "../assets/images/lnt/plan-ahead-and-prepare.jpg";
import TravelOnDurableSurfaces from "../assets/images/lnt/travel-on-durable-surfaces.jpg";
import DisposeOfWasteProperly from "../assets/images/lnt/dispose-of-waste-properly.jpg";
import LeaveWhatYouFind from "../assets/images/lnt/leave-what-you-find.jpg";
import RespectWildlife from "../assets/images/lnt/respect-wildlife.jpg";
import BeConsiderateOfOtherVisitors from "../assets/images/lnt/be-considerate-of-other-visitors.jpg";

const principles = [
  {
    id: "01",
    name: "Plan Ahead & Prepare",
    text: "A little preparation goes a long way! Check the forecast, plan your route, and review the <a class='font-bold underline decoration-accent hover:text-primary-dark transition-colors' href='/rules/'>park rules</a> before heading out.",
    image: PlanAhead,
    altText: "A lone tree in Ute Valley Park",
  },
  {
    id: "02",
    name: "Travel on Durable Surfaces",
    text: "<a class='font-bold underline decoration-accent hover:text-primary-dark transition-colors' href='/leavenotrace/travel-on-durable-surfaces/'>Stay on the trail</a> to protect the landscape around you. Stick to marked paths and respect Natural Preservation Area closures so plants and soil can thrive.",
    image: TravelOnDurableSurfaces,
    altText: "Ute Valley Park trail",
  },
  {
    id: "03",
    name: "Dispose of Waste Properly",
    text: "Follow a Pack-In, Pack-Out approach — carry out everything you carry in, including <a class='font-bold underline decoration-accent hover:text-primary-dark transition-colors' href='/leavenotrace/dogs/'>pet waste</a>. This keeps Ute Valley Park looking (and smelling) bea-UTE-iful!",
    image: DisposeOfWasteProperly,
    altText: "Rubbish in the dirt",
  },
  {
    id: "04",
    name: "Leave What You Find",
    text: "Take only photos, leave only footprints! <a class='font-bold underline decoration-accent hover:text-primary-dark transition-colors' href='/leavenotrace/leave-what-you-find/'>Snap all the pictures you like</a>, but please leave rocks, plants, and other natural treasures for the next visitor to enjoy.",
    image: LeaveWhatYouFind,
    altText: "Flowers",
  },
  {
    id: "05",
    name: "Respect Wildlife",
    text: "Observe all wildlife from a safe distance and never feed them. Keep dogs on leash to protect wildlife habitat — learn more about our <a class='font-bold underline decoration-accent hover:text-primary-dark transition-colors' href='/leavenotrace/respect-wildlife/'>leash guidelines</a>.",
    image: RespectWildlife,
    altText: "A deer in Ute Valley Park",
  },
  {
    id: "06",
    name: "Be Considerate of Other Visitors",
    text: "A friendly hello goes a long way! Yield to other trail users, keep noise levels down, and share the trail so everyone can have a great time in the park.",
    image: BeConsiderateOfOtherVisitors,
    altText: "Hikers walking on snow in the park",
  },
];

import lntLogo from "../assets/images/logos/leave-no-trace.png";
---

<section class="border-t border-stone-300 bg-stone-50 overflow-hidden">
  <div class="mx-auto max-w-(--breakpoint-2xl)">
    <div class="grid grid-cols-1 lg:grid-cols-12">
      <!-- Left Column: About Leave No Trace -->
      <div
        class="lg:col-span-4 p-8 lg:p-16 border-b lg:border-b-0 lg:border-r border-stone-300 bg-stone-100/50"
      >
        <div class="sticky top-24 space-y-12">
          <div class="space-y-6">
            <div class="flex items-center gap-3">
              <span class="inline-block h-px w-8 bg-primary-dark"></span>
              <span
                class="font-mono text-[10px] font-black uppercase tracking-[0.2em] text-stone-500"
              >
                Environmental Stewardship
              </span>
            </div>

            <h2
              class="text-5xl sm:text-6xl font-serif font-black tracking-tighter leading-none text-stone-900 uppercase"
            >
              Leave <br /> No <br />
              <span class="text-primary-dark">Trace.</span>
            </h2>

            <p class="text-lg font-medium leading-relaxed text-stone-700">
              Ute Valley Park is a treasured urban wildland. Please help keep
              the park safe and clean for all visitors by following the Seven
              Principles.
            </p>
          </div>

          <div class="pt-12 border-t border-stone-300 space-y-8">
            <div
              class="bg-white border-2 border-primary-dark p-8 shadow-sm relative group transition-all duration-500 hover:shadow-[8px_8px_0px_0px_var(--color-accent)]"
            >
              <a
                href="https://www.lnt.org"
                target="_blank"
                rel="noopener noreferrer"
              >
                <Picture
                  src={lntLogo}
                  alt="Leave No Trace Official Logo"
                  width="200"
                  class="h-auto w-full max-w-[160px] mx-auto"
                />
              </a>
              <div class="mt-6 text-center">
                <span
                  class="font-mono text-[10px] uppercase font-bold text-primary-dark"
                  >Certified Partner</span
                >
              </div>
            </div>

            <a
              href="/rules/"
              class="btn-primary-cta block text-center"
            >
              View Park Rules
            </a>
          </div>
        </div>
      </div>

      <!-- Principles Column -->
      <div class="lg:col-span-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-px bg-stone-300">
          {
            principles.map((principle) => (
              <div class="bg-stone-50 p-8 lg:p-12 space-y-8 flex flex-col group hover:bg-white transition-colors">
                <div class="space-y-4">
                  <div class="flex justify-between items-start">
                    <span class="font-mono text-4xl font-black text-accent-dark group-hover:text-accent transition-colors">
                      {principle.id}
                    </span>
                    <div class="w-12 h-px bg-stone-200 mt-5 group-hover:bg-primary-dark transition-all" />
                  </div>
                  <h3 class="text-2xl font-serif font-black uppercase tracking-tight text-stone-900 group-hover:text-primary-dark transition-colors">
                    {principle.name}
                  </h3>
                </div>

                <div class="aspect-16/10 overflow-hidden bg-stone-200 border border-stone-200 transition-all duration-700">
                  <Picture
                    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                    src={principle.image}
                    alt={principle.altText}
                    width={600}
                  />
                </div>

                <div class="space-y-4">
                  <p
                    class="text-sm leading-relaxed text-stone-600 font-medium"
                    set:html={principle.text}
                  />
                </div>

                <div class="mt-auto pt-6 border-t border-stone-100">
                  <span class="font-mono text-[9px] uppercase tracking-widest text-primary-dark font-bold">
                    Principle {principle.id}
                  </span>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @font-face {
    font-family: "EditorialSerif";
    src: local("Georgia"), local("Times New Roman"), serif;
  }

  .font-serif {
    font-family: "EditorialSerif", serif;
  }
</style>
