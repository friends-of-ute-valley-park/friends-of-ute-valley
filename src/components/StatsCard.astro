---
const stats = [
  { id: 1, name: "Individual volunteers", value: "130" },
  { id: 2, name: "Total volunteer hours", value: "538" },
  { id: 3, name: "Instagram followers", value: "1,900" },
  { id: 4, name: "Community survey responses", value: "105" },
];

import { Image } from "astro:assets";
import Volunteers from "@/assets/images/volunteer-6.jpg";
---

<div class="relative border-y border-stone-300 bg-white overflow-hidden">
  <div class="grid grid-cols-1 lg:grid-cols-12 gap-0">
    <!-- Image with technical frame -->
    <div
      class="lg:col-span-6 relative h-96 lg:h-auto overflow-hidden border-b lg:border-b-0 lg:border-r border-stone-300 group"
    >
      <Image
        src={Volunteers}
        alt="Volunteers in action"
        class="h-full w-full object-cover transition-all duration-1000"
      />
      <div
        class="absolute inset-0 border-[24px] border-white/10 pointer-events-none"
      >
      </div>
      <div
        class="absolute bottom-6 left-6 bg-primary-dark text-white px-3 py-1 font-mono text-[10px] uppercase tracking-widest"
      >
      </div>
    </div>

    <!-- Stats Content -->
    <div class="lg:col-span-6 p-8 lg:p-16 flex flex-col justify-center">
      <div class="space-y-12">
        <div>
          <div class="flex items-center gap-4 mb-4">
            <span class="inline-block h-px w-8 bg-accent-dark"></span>
            <span
              class="font-mono text-[10px] font-black uppercase tracking-[0.2em] text-accent-dark"
              >Year in Review: 2024</span
            >
          </div>
          <h2
            class="text-4xl sm:text-5xl font-serif font-black uppercase tracking-tighter text-stone-900 leading-none"
          >
            Our <br />
            <span class="text-primary-dark">Impact.</span>
          </h2>
          <p
            class="mt-6 text-lg text-stone-600 font-medium leading-relaxed max-w-xl"
          >
            Here's what our amazing volunteers accomplished together in 2024.
          </p>
        </div>

        <div
          class="grid grid-cols-2 gap-px bg-stone-200 border border-stone-200"
        >
          {
            stats.map((stat) => (
              <div class="bg-white p-6 space-y-1 hover:bg-stone-50 transition-colors">
                <div class="text-3xl sm:text-4xl font-mono font-black tracking-tighter text-stone-900">
                  {stat.value}
                </div>
                <div class="text-[10px] font-mono uppercase tracking-widest text-stone-500 font-bold">
                  {stat.name}
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</div>
